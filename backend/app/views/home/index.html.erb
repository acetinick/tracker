<div class="space-y-8">
  <!-- Hero Section -->
  <div class="bg-white rounded-lg shadow-md p-8">
    <h1 class="text-4xl font-bold text-teal-800 mb-4">Welcome to HealthTracker</h1>
    <p class="text-gray-600 text-lg mb-6">Your personal health companion for tracking and managing your wellness journey.</p>
    
    <% unless user_signed_in? %>
      <div class="space-x-4">
        <%= link_to "Sign in", new_user_session_path, 
            class: "bg-teal-600 hover:bg-teal-700 text-white px-6 py-3 rounded-md text-sm font-medium" %>
        <%= link_to "Sign up", new_user_registration_path, 
            class: "bg-white hover:bg-gray-50 text-teal-600 border border-teal-600 px-6 py-3 rounded-md text-sm font-medium" %>
      </div>
    <% end %>
  </div>

  <% if user_signed_in? %>
    <!-- Quick Stats -->
    <div class="grid grid-cols-1 md:grid-cols-3 gap-6">
      <div class="bg-white p-6 rounded-lg shadow-md">
        <div class="flex items-center">
          <div class="p-3 bg-teal-100 rounded-full">
            <svg class="h-6 w-6 text-teal-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 19v-6a2 2 0 00-2-2H5a2 2 0 00-2 2v6a2 2 0 002 2h2a2 2 0 002-2zm0 0V9a2 2 0 012-2h2a2 2 0 012 2v10m-6 0a2 2 0 002 2h2a2 2 0 002-2m0 0V5a2 2 0 012-2h2a2 2 0 012 2v14a2 2 0 01-2 2h-2a2 2 0 01-2-2z" />
            </svg>
          </div>
          <div class="ml-4">
            <h2 class="text-gray-900 text-lg font-medium">Health Score</h2>
            <p class="text-3xl font-bold text-teal-600">85%</p>
          </div>
        </div>
      </div>

      <div class="bg-white p-6 rounded-lg shadow-md">
        <div class="flex items-center">
          <div class="p-3 bg-teal-100 rounded-full">
            <svg class="h-6 w-6 text-teal-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z" />
            </svg>
          </div>
          <div class="ml-4">
            <h2 class="text-gray-900 text-lg font-medium">Next Appointment</h2>
            <p class="text-teal-600 font-medium">In 3 days</p>
          </div>
        </div>
      </div>

      <div class="bg-white p-6 rounded-lg shadow-md">
        <div class="flex items-center">
          <div class="p-3 bg-teal-100 rounded-full">
            <svg class="h-6 w-6 text-teal-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5H7a2 2 0 00-2 2v12a2 2 0 002 2h10a2 2 0 002-2V7a2 2 0 00-2-2h-2M9 5a2 2 0 002 2h2a2 2 0 002-2M9 5a2 2 0 012-2h2a2 2 0 012 2" />
            </svg>
          </div>
          <div class="ml-4">
            <h2 class="text-gray-900 text-lg font-medium">Recent Records</h2>
            <p class="text-teal-600 font-medium">5 updates</p>
          </div>
        </div>
      </div>
    </div>

    <!-- Quick Actions -->
    <div class="bg-white rounded-lg shadow-md p-6">
      <h2 class="text-2xl font-bold text-gray-900 mb-4">Quick Actions</h2>
      <div class="grid grid-cols-1 md:grid-cols-3 gap-4">
        <%= link_to "#", class: "flex items-center p-4 bg-teal-50 rounded-lg hover:bg-teal-100" do %>
          <div class="p-2 bg-teal-100 rounded-full">
            <svg class="h-6 w-6 text-teal-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 9v3m0 0v3m0-3h3m-3 0H9m12 0a9 9 0 11-18 0 9 9 0 0118 0z" />
            </svg>
          </div>
          <span class="ml-3 font-medium text-teal-700">Book Appointment</span>
        <% end %>

        <%= link_to "#", class: "flex items-center p-4 bg-teal-50 rounded-lg hover:bg-teal-100" do %>
          <div class="p-2 bg-teal-100 rounded-full">
            <svg class="h-6 w-6 text-teal-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5H7a2 2 0 00-2 2v12a2 2 0 002 2h10a2 2 0 002-2V7a2 2 0 00-2-2h-2M9 5a2 2 0 002 2h2a2 2 0 002-2M9 5a2 2 0 012-2h2a2 2 0 012 2" />
            </svg>
          </div>
          <span class="ml-3 font-medium text-teal-700">Add Health Record</span>
        <% end %>

        <%= link_to "#", class: "flex items-center p-4 bg-teal-50 rounded-lg hover:bg-teal-100" do %>
          <div class="p-2 bg-teal-100 rounded-full">
            <svg class="h-6 w-6 text-teal-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z" />
            </svg>
          </div>
          <span class="ml-3 font-medium text-teal-700">Update Profile</span>
        <% end %>
      </div>
    </div>
  <% end %>
</div> 