<div class="space-y-6">
  <div class="flex justify-between items-center">
    <h1 class="text-2xl font-bold text-gray-900">Biomarkers</h1>
  </div>

  <!-- Currently Tracked Biomarkers -->
  <div class="bg-white shadow rounded-lg p-6">
    <h2 class="text-xl font-semibold text-gray-900 mb-4">Tracked biomarkers</h2>
    
    <% if @biomarkers.any? %>
      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-4">
        <% @biomarkers.each do |biomarker| %>
          <div class="border rounded-lg p-4 bg-gray-50">
            <div class="flex justify-between items-start">
              <div>
                <%= link_to biomarker_path(biomarker.biomarker), class: "hover:text-teal-600" do %>
                  <h3 class="font-medium text-gray-900"><%= biomarker.biomarker.name %></h3>
                  <p class="text-sm text-gray-500"><%= biomarker.biomarker.code %></p>
                <% end %>
              </div>
              <div class="flex space-x-2">
                <%= link_to new_biomarker_biomarker_record_path(biomarker), 
                    class: "text-teal-600 hover:text-teal-800" do %>
                  <span class="text-sm">Add Record</span>
                <% end %>
                <%= button_to biomarker_path(biomarker), method: :delete, class: "inline-flex items-center px-3 py-1.5 border border-transparent text-xs font-medium rounded text-red-700 bg-red-100 hover:bg-red-200 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-red-500" do %>
                  <svg class="h-4 w-4 mr-1.5" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12" />
                  </svg>
                <% end %>
              </div>
            </div>
            <p class="text-sm text-gray-600 mt-2">
              Reference Range: <%= biomarker.biomarker.reference_range %>
            </p>
          </div>
        <% end %>
      </div>
    <% else %>
      <p class="text-gray-500">You are not tracking any biomarkers yet.</p>
    <% end %>
  </div>
</div> 